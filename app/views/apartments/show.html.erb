<div class="container">
  <h1><%=@apartment.title%></h1>
  <%= image_tag(@apartment.photos, alt: "Apartment photo", width: 500) %><br>
  <p><%=@apartment.description %></p>
  <p>Price per night: $<%= @apartment.price_per_night %></p>
  <%=link_to "book", new_apartment_booking_path(@apartment), class: "btn btn-primary" %>
  <%= link_to 'Back to Apartments', apartments_path, class: "btn btn-primary" %>
</div>
