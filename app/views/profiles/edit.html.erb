<h1 class="text-center mb-4">Edit Your Profile</h1>

<div class="card">
  <div class="card-body">
    <%= simple_form_for @user, url: profile_path, html: { class: 'form-horizontal' } do |f| %>
      <div class="form-group">
        <%= f.input :first_name, label: 'First Name', input_html: { class: 'form-control' } %>
      </div>

      <div class="form-group">
        <%= f.input :last_name, label: 'Last Name', input_html: { class: 'form-control' } %>
      </div>

      <div class="form-group">
        <%= f.input :email, label: 'Email', input_html: { class: 'form-control' } %>
      </div>

      <div class="form-group">
        <%= f.submit 'Update Profile', class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>

<%= link_to 'Cancel', profile_path, class: 'btn btn-secondary mt-3' %>
